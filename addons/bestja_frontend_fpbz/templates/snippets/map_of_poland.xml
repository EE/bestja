<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="map_of_poland_snippet" inherit_id="website.snippets" name="FPBZ snippet with map of Poland and cities">
            <xpath expr="//div[@id='snippet_feature']" position="inside">
                <div>
                    <div class="oe_snippet_thumbnail">
                        <img class="oe_snippet_thumbnail_img" src="/bestja_frontend_fpbz/static/src/img/snippets/s_map_of_poland.png"/>
                        <span class="oe_snippet_thumbnail_title">Map of Poland</span>
                    </div>

                    <section class="oe_snippet_body">
                        <div id="map_of_poland_section" class="container-fluid map_of_poland_section">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-md-7 mt16 map_of_poland_container">
                                        <img src="/bestja_frontend_fpbz/static/src/img/content/wolontariat-mapa-02.svg"/>
                                    </div>
                                    <div class="col-md-4 mt16 description_of_map_container">
                                        <div>
                                            <h2>Twoja organizacja chciałaby z nami współpracować?</h2>
                                            <h2>
                                                <a class="color_orange">
                                                    <strong>Dowiedz się więcej</strong>
                                                </a> lub
                                                <a class="color_orange">
                                                    <strong>zostań organizacją partnerską</strong>
                                                </a>
                                            </h2>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </xpath>
        </template>
    </data>
</openerp>
