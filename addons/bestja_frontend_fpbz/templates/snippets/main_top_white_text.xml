<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="main_top_photo_text_snippet" inherit_id="website.snippets" name="FPBZ snippet of main site top big photo and text">
            <xpath expr="//div[@id='snippet_structure']" position="inside">
                <div>
                    <div class="oe_snippet_thumbnail">
                        <img class="oe_snippet_thumbnail_img" src="/bestja_frontend_fpbz/static/src/img/snippets/s_block_big_picture.png"/>
                        <span class="oe_snippet_thumbnail_title">Top Big Photo</span>
                    </div>

                    <section class="oe_snippet_body oe_dark">
                        <div class="container-fluid top-section-container">
                            <div class="row">
                                <div class="col-md-12 main_top_photo_text">
                                    <div class="mb32 main_top_white_text open_sans_bold">
                                        <h1 class="mt64 mb32 text-center">Rocznie w Polsce marnuje się <span class="differentiator_1">9 mln</span> ton jedzenia</h1>
                                        <h1 class="text-center">
                                            <span class="differentiator_1">2,5 mln</span> osób nie ma dostępu do pełnowartościowej żywności</h1>
                                        <h1 class="text-center">Pomóż nam to zmienić!</h1>
                                    </div>
                                    <div class="text-center">
                                        <h1 class="mt64 mb64 text-center text-uppercase color_orange open_sans_bold choose_place">
                                            wybierz swoją miejscowość</h1>
                                    </div>
                                </div>
                                <div class="text-center mt64 mouse_div">
                                    <img class="img mouse_img" src="/bestja_frontend_fpbz/static/src/img/content/scroll-01.svg"/>
                                    <br />
                                    <span class="direction_down color_orange">&lt;</span>
                                </div>
                            </div>
                        </div>
                        <script>
                            // Background picture will fit viewport
                            var height = window.innerHeight - document.getElementsByClassName('navbar-static-top')[0].offsetHeight - 50;
                            document.getElementsByClassName('main_top_photo_text')[0].style.height = height + "px";
                        </script>
                    </section>
                </div>
            </xpath>
        </template>
    </data>
</openerp>
