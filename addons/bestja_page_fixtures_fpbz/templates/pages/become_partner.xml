<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="website.become_partner" name="Site about becoming a partner" page="True">
            <t t-call="website.layout">
                <div id="wrap" class="oe_structure oe_empty">
                    <section class="oe_snippet_body">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-12">
                                    <h1 class="text-center mt48 mb48 section_title">
                                        <strong>Zostań</strong> organizacją partnerską Banku Żywności!</h1>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body">
                        <div class="container become_partner">
                            <div class="row">
                                <div class="col-md-6 mt16">
                                    <p>Promuj lokalnie walkę z niedożywieniem i niemarnowanie żywności.</p>
                                    <p>Włącz się w ogólnopolskie i regionalne programy przeprowadzając
                                                    zbiórkę żywności w lokalnym sklepie.</p>
                                    <p>Możesz mieć wpływ na dostęp do pełnowartościowego jedzenia!</p>
                                </div>
                                <div class="col-md-6 mt16">
                                    <img class="img img-responsive shadow mb16"
                                         src="http://lorempixel.com/g/800/700"/>
                                </div>
                                <div class="col-sm-12 mt16 become_partner_link">
                                    <p>Kto może zostać partnerem?</p>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body mt16 mb16">
                        <div class="container join_us">
                            <div class="row">
                                <div class="text-center">
                                    <a class="text-center mt32 mb32" t-if="website.user_id == user_id" href="/web/signup">DOŁĄCZ TERAZ</a>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-12">
                                    <h1 class="text-center mt48 mb48 section_title">
                                        Co otrzymasz jako <strong>partner</strong>
                                    </h1>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body fadeInLeft">
                        <div class="container what_partner_receives">
                            <div class="row">
                                <div class="col-md-6">
                                    <ul>
                                        <li>
                                            <span class="glyphicon glyphicon-ok" /> wsparcie merytoryczne w postaci szkoleń i publikacji</li>
                                        <li>
                                            <span class="glyphicon glyphicon-ok" /> komplet dokumentów niezbędnych do zorganizowania zbiórki</li>
                                        <li>
                                            <span class="glyphicon glyphicon-ok" /> kontakt do osoby, która pomoże załatwić formalności i udzieli wszelkich wskazówek</li>
                                        <li>
                                            <span class="glyphicon glyphicon-ok" /> legitymacje i dyplomy dla wolontariuszy</li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <ul>
                                        <li>
                                            <span class="glyphicon glyphicon-ok" /> przydatne w czasie zbiórek materiały promocyjne</li>
                                        <li>
                                            <span class="glyphicon glyphicon-ok" /> prestiż dzięki udziałowi w akcjach ogólnopolskich</li>
                                        <li>
                                            <span class="glyphicon glyphicon-ok" /> radość i satysfakcję z pomocy potrzebującym</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body mt16 mb16">
                        <div class="container join_us">
                            <div class="row">
                                <div class="text-center">
                                    <a class="text-center mt32 mb32" t-if="website.user_id == user_id" href="/web/signup">DOŁĄCZ TERAZ</a>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body">
                        <div class="container become_partner">
                            <div class="row">
                                <div class="col-md-6 mt16">
                                    <img class="img img-responsive shadow mb16"
                                         src="http://lorempixel.com/g/800/700"/>
                                </div>
                                <div class="col-md-6 mt16 fadeInRight">
                                    <p>„Jako koordynator wolontariatu korzystam z aplikacji,
                                        która ułatwia mi rekrutację wolontariuszy, przydzielanie
                                        zadań i monitorowanie stopnia ich wykonania.
                                        Dzięki aplikacji koordynowanie grupy wolontariuszy
                                        jest proste i nie zajmuje wcale dużo czasu.”</p>
                                    <p>
                                        <small>
                                            <strong>Ewa</strong>, wolontariusz Banku Żywności w Warszawie</small>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-12">
                                    <h1 class="text-center mt48 mb48 section_title">
                                        Dlaczego <strong>warto</strong> dołączyć?</h1>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body mb16">
                        <div class="container volunteers_newsletter">
                            <div class="row mt16 mb16">
                                <div class="col-xs-6 col-sm-4 col-md-4 col-lg-2 col-lg-offset-1 text-center recrutation_step_column">
                                    <div class="recrutation_step_number">1</div>
                                    <h3 class="mt32 mb32 recrutation_step_title">Tworzenie ofert</h3>
                                    <p class="text-muted mt16 mb8 recrutation_step_description">
                                        Twórz atrakcyjne oferty dla wolontariuszy za pomocą wbudowanych szablonów.</p>
                                </div>
                                <div class="col-xs-6 col-sm-4 col-md-4 col-lg-2 text-center recrutation_step_column">
                                    <div class="recrutation_step_number">2</div>
                                    <h3 class="mt32 mb32 recrutation_step_title">Rekrutacja wolontariuszy</h3>
                                    <p class="text-muted mt16 mb8">Ustalaj terminy spotkań w kalendarzu.<br />
                                        Błyskawicznie selekcjonuj aplikacje.</p>
                                </div>
                                <div class="col-xs-6 col-sm-4 col-md-4 col-lg-2 text-center recrutation_step_column">
                                    <div class="recrutation_step_number">3</div>
                                    <h3 class="mt32 mb32 recrutation_step_title">Współpraca ze sklepami</h3>
                                    <p class="text-muted mt16 mb8">Dodawaj i wybieraj miejsca, w których chcesz zorganizować zbiórkę.</p>
                                </div>
                                <div class="col-xs-6 col-sm-4 col-md-4 col-lg-2 text-center recrutation_step_column">
                                    <div class="recrutation_step_number">4</div>
                                    <h3 class="mt32 mb32 recrutation_step_title">Sprawo&#173;zdawczość</h3>
                                    <p class="text-muted mt16 mb8">Rozliczaj zebraną żywność w prosty sposób.</p>
                                </div>
                                <div class="col-xs-6 col-sm-4 col-md-4 col-lg-2 text-center recrutation_step_column">
                                    <div class="recrutation_step_number">5</div>
                                    <h3 class="mt32 mb32 recrutation_step_title">Wiadomości</h3>
                                    <p class="text-muted mt16 mb8">Bądź na bieżąco z aktualnymi informacjami na temat zbiórki.</p>
                                </div>
                                <div class="col-lg-1 hidden-xs hidden-sm hidden-md" />
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body fadeInRight">
                        <div class="container quote_div">
                            <div class="row">
                                <div class="col-md-offset-1 col-md-10">
                                    <blockquote>
                                        Dla mnie największą zaletą aplikacji jest możliwość prostej
                                        i szybkiej sprawozdawczości. Mogę też przeprowadzać rekrutację
                                        i zlecać im zadania. To mi ułatwia pracę.
                                    </blockquote>
                                    <span class="description_under_quote">
                                        <strong>Ola</strong>, koordynator, Organizacja Pomoc Dzieciom, Słupsk
                                    </span>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-12">
                                    <h1 class="text-center mt48 mb48 section_title">
                                        <strong>Zalety</strong> aplikacji</h1>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body">
                        <div class="container advantages_of_application">
                            <div class="row">
                                <div class="col-md-6">
                                    <ul>
                                        <li>
                                            <span class="glyphicon glyphicon-ok" /> intuicyjne narzędzie do rekrutacji wolontariuszy</li>
                                        <li>
                                            <span class="glyphicon glyphicon-ok" /> szablony dokumentów potrzebnych do współpracy z wolontariuszami</li>
                                        <li>
                                            <span class="glyphicon glyphicon-ok" /> monitoring statusu realizacji zleconych wolontariuszom zadań</li>
                                        <li>
                                            <span class="glyphicon glyphicon-ok" /> widok najważniejszych wydarzeń w kalendarzu</li>
                                        <li>
                                            <span class="glyphicon glyphicon-ok" /> narzędzie do szybkiej komunikacji z wolontariuszami (umawianie spotkań)</li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <ul>
                                        <li>
                                            <span class="glyphicon glyphicon-ok" /> dostęp do aktualnych informacji na temat akcji</li>
                                        <li>
                                            <span class="glyphicon glyphicon-ok" /> elastyczny moduł statystyk</li>
                                        <li>
                                            <span class="glyphicon glyphicon-ok" /> dostęp do bazy wiedzy na temat organizacji zbiórek i wolontariatu</li>
                                        <li>
                                            <span class="glyphicon glyphicon-ok" /> możliwość łatwego i szybkiego sprawozdania</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body mt16 mb16">
                        <div class="container join_us">
                            <div class="row">
                                <div class="text-center">
                                    <a class="text-center mt32 mb32" t-if="website.user_id == user_id" href="/web/signup">DOŁĄCZ TERAZ</a>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body">
                        <div class="container">
                            <div class="row">
                                <div class="col-sm-12">
                                    <h1 class="text-center mt48 mb48 section_title">
                                        Zdobądź wiedzę <strong>koordynatora zbiórki</strong>
                                    </h1>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_snippet_body mt16 mb16">
                        <div class="slider_container the_tasks_of_coordinator">
                            <div class="row">
                                <div class="the_tasks_of_coordinator_slider">
                                    <div class="carousel_column">
                                        <img class="img img-rounded img-responsive"
                                             src="http://lorempixel.com/g/480/480"/>
                                            <h4 class="mt16 mb16">Zadania koordynatora w czasie organizacji zbiórki</h4>
                                    </div>
                                    <div class="carousel_column">
                                        <img class="img img-rounded img-responsive"
                                             src="http://lorempixel.com/g/480/480"/>
                                            <h4 class="mt16 mb16">Cechy ważne dla koordynatora zbiórki</h4>
                                    </div>
                                    <div class="carousel_column">
                                        <img class="img img-rounded img-responsive"
                                             src="http://lorempixel.com/g/480/480"/>
                                            <h4 class="mt16 mb16">Kilka kroków skutecznej rekrutacji</h4>
                                    </div>
                                    <div class="carousel_column">
                                        <img class="img img-rounded img-responsive"
                                             src="http://lorempixel.com/g/480/480"/>
                                            <h4 class="mt16 mb16">Szkolenia wolontariuszy</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </t>
        </template>
        <record id="become_partner_menu" model="website.menu">
            <field name="name">Zostań partnerem</field>
            <field name="url">/page/become_partner</field>
            <field name="parent_id" ref="website.main_menu"/>
            <field name="sequence" type="int">20</field>
        </record>
    </data>
</openerp>
